<h2>Compare Your Cash Back Card</h2>
<%= form_tag(calculators_cbcompare_path, method: "post") do %>
  <div class="well col-md-12">
  <h4><center>Enter your cash back card details:</center></h4>
  <div class="text-right">
  <%= label_tag 'Card Name' %>
  <%= text_field_tag 'my_card_name' %>
  <br />
  <br />
  <%= label_tag 'Groceries %:' %>
  <%= number_field_tag 'my_groceries' %>
  <br />
  <br />
  <%= label_tag 'Gas %:' %>
  <%= number_field_tag 'my_gas' %>
  <br />
  <br />
  <%= label_tag 'Everyday Spending %:' %>
  <%= number_field_tag 'my_everyday' %>
  <br />
  <hr>
  </div>
  <h4><center>Enter your monthly spending:</center></h4>
  <div class="text-right">
  <%= label_tag 'Groceries:' %>
  <%= number_field_tag 'groceries' %>
  <br />
  <br />
  <%= label_tag 'Gas:' %>
  <%= number_field_tag 'gas' %>
  <br />
  <br />
  <%= label_tag 'Everyday Spending:' %>
  <%= number_field_tag 'everyday' %>
  <br />
  <br />
  <%= submit_tag 'Let\'s Do This!' %>
  </div>
</div>

<% end %>
