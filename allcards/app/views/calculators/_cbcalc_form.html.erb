
<h2>Cash Back Card Calculator</h2>
<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
  Enter Your Spending
</button>
<div class="collapse" id="collapseExample">
  <br />
<%= form_tag(calculators_cbcalc_path, method: "post") do %>
  <div class="well text-right col-md-10">
    <h4><center>Enter your monthly spending by category:</center></h4>
  <%= label_tag 'Groceries:' %>
  <%= number_field_tag 'groceries', params[:groceries] %>
  <br />
  <br />
  <%= label_tag 'Gas:' %>
  <%= number_field_tag 'gas', params[:gas] %>
  <br />
  <br />
  <%= label_tag 'Everyday Spending:' %>
  <%= number_field_tag 'everyday', params[:everyday] %>
  <br />
  <br />
  <%= submit_tag 'Let\'s Do This!' %>
  </div>
</div>
<% end %>
